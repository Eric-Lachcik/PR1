<%- include('header.ejs') %>

<style>
    .card {
        padding: 5px;
        background-color: #f5f5f5;
    }
    
    .container {
        padding-top: 20px; 
    }
    
</style>


<div class="container">
    <h2>Productos</h2> 
    <div class="row">
        <% productos.forEach(producto => { %>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nombre: <%= producto.nom %></h5>
                        <p class="card-text">Precio: <%= producto.preu %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>