<%- include('header.ejs') %>

<style>
    .card {
        padding: 5px;
        background-color: #f5f5f5;
    }
    
    .container {
        padding-top: 20px; 
    }
    .row {
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h2>Productos</h2> 
    <div class="row">
        <% productos.forEach(producto => { %>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">Nombre: <%= producto.nom %>  </p>
                        <p class="card-text">Precio: <%= producto.preu %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <h2>Usuarios</h2>    
    <div class="row">
        <% usuarios.forEach(usuario => { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-title">Nombre: <%= usuario.nom %>  </p>
                            <p class="card-text">Email: <%= usuario.email %></p>
                        </div>
                    </div>
                </div>
        <% }) %>
    </div>
</div>