<%- include('header.ejs') %>

    <style>
        .card {
            padding: 5px;
            background-color: #f5f5f5;
        }

        .container {
            padding-top: 20px;
        }
        .margin-card{
            margin: 20px;
        }

    </style>
    <div class="container">
        <h2>Detalles del Usuario</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <form action="/usuariosupdate" method="POST">
                            <div class="row">
                                <div class="col-md-10">
                                    <label for="nom">Nombre:</label>
                                    <input type="text" id="nom" name="nom" value="<%= usuario.nom %>" class="form-control ">
                                </div>
                                <div class="col-md-12">
                                    <label for="email">Email:</label>
                                    <input type="email" id="email" name="email" value="<%= usuario.email %>" class="form-control">
                                </div>
                            </div>
                            <div class="margin-card">    
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>