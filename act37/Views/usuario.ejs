<%- include('header.ejs') %>

    <style>
        .card {
            padding: 5px;
            background-color: #f5f5f5;
        }

        .container {
            padding-top: 20px;
        }

    </style>
    <div class="container">
        <h2>Detalles del Usuario</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text">Id: <%= usuario.id %></p>
                            </div>
                            <div class="col-md-4">
                                <p class="card-text">Nombre: <%= usuario.nom %></p>
                            </div>
                            <div class="col-md-4">
                                <p class="card-text">Email: <%= usuario.email %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>